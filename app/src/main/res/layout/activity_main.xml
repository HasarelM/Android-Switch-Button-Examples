<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_gravity="center"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Switch
        android:id="@+id/main_activity_sw_switch1"
        android:layout_width="wrap_content"
        android:layout_marginLeft="160dp"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"/>

    <Switch
        android:id="@+id/main_activity_sw_switch2"
        android:layout_marginLeft="160dp"
        android:layout_below="@id/main_activity_sw_switch1"
        android:layout_width="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/main_activity_btn_click"
        android:text="Click Here"
        android:textAllCaps="false"
        android:layout_below="@id/main_activity_sw_switch2"
        android:layout_marginRight="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</RelativeLayout>